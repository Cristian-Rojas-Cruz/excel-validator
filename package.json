{
  "name": "@crissnpm/excel-validator",
  "version": "0.0.2",
  "description": "Type-safe Excel schema validator using ExcelJS and Zod.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint . --ext .ts",
    "test": "vitest run"
  },
  "keywords": [
    "excel",
    "validation",
    "typescript",
    "exceljs",
    "zod"
  ],
  "author": "Cristian Rojas <cristian.c.rojas.cruz@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Cristian-Rojas-Cruz/excel-validator.git"
  },
  "bugs": {
    "url": "https://github.com/Cristian-Rojas-Cruz/excel-validator/issues"
  },
  "homepage": "https://github.com/Cristian-Rojas-Cruz/excel-validator#readme",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@eslint/json": "^0.13.2",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/exceljs": "^0.5.3",
    "exceljs": "^4.4.0",
    "zod": "^4.1.12"
  }
}
