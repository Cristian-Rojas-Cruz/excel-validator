[
  {
    "tabname": "MainData",
    "required": true,
    "minRows": 3,
    "columns": [
      { "name": "ID", "required": true, "type": "string" },
      { "name": "Email", "required": true, "type": "email" },
      { "name": "Category", "required": true, "type": "enum", "allowedValues": ["A", "B", "C"] },
      { "name": "Amount", "required": false, "type": "number" },
      { "name": "IsActive", "required": false, "type": "boolean" },
      { "name": "ConditionalField", "required": false, "type": "string" },
      { "name": "Exclusive1", "required": false, "type": "string" },
      { "name": "Exclusive2", "required": false, "type": "string" }
    ],
    "rules": {
      "unique": { "columns": ["ID", "Email"] },
      "mutuallyExclusive": { "columns": ["Exclusive1", "Exclusive2"] },
      "conditionalRequired": {
        "when": { "column": "Category", "equals": "C" },
        "thenRequired": ["ConditionalField"]
      }
    }
  },
  {
    "tabname": "OptionalSheet",
    "required": false,
    "minRows": 1,
    "columns": [
      { "name": "CustomField", "required": true, "type": "string" }
    ],
    "rules": {
      "customRule": { "exampleParam": true }
    }
  }
]