[
  {
    "tabname": "MainData",
    "required": true,
    "minRows": 3,
    "columns": [
      { "name": "ID", "key":"id", "required": true, "type": "string" },
      { "name": "Email", "key":"email", "required": true, "type": "email" },
      { "name": "Category", "key":"cat", "required": true, "type": "enum", "allowedValues": ["A", "B", "C"] },
      { "name": "Amount", "key":"amount", "required": false, "type": "number" },
      { "name": "IsActive", "key":"active", "required": false, "type": "boolean" },
      { "name": "ConditionalField", "key":"condition", "required": false, "type": "string" },
      { "name": "Exclusive1", "key":"exclusiveone", "required": false, "type": "string" },
      { "name": "Exclusive2", "key":"exclusivetwo", "required": false, "type": "string" },
      { "name": "Departamento", "required": true, "type": "string" },
      { "name": "custom", "required": false, "type": "string" },
      { "name": "Dirección", "required": false, "type": "string" },
      { "name": "Ciudad", "required": false, "type": "string" },
      { "name": "Código postal", "required": false, "type": "string" },
      { "name": "Tipo de contrato", "required": false, "type": "enum", "allowedValues": ["Temporal", "Fijo"] },
      { "name": "Duración",  "required": false, "type": "string" },
      { "name": "Fecha inicio", "required": true, "type": "date" },
      { "name": "Fecha fin",    "required": true, "type": "date" },
      { "name": "Hora entrada", "required": false, "type": "time" },
      { "name": "Hora salida",  "required": false, "type": "time" }
    ],
    "rules": {
      "unique": { "columns": ["ID", "Email"] },
      "mutuallyExclusive": { "columns": ["Exclusive1", "Exclusive2"] },
      "conditionalRequired": {
        "when": { "column": "Category", "equals": "C" },
        "thenRequired": ["ConditionalField"]
      },
      "references": [
        {
          "column": "Departamento",
          "targetSheet": "OptionalSheet",
          "targetColumn": "Nombre del departamento"
        }
      ],
      "atLeastOneRequired": [
        ["Email", "custom"]
      ],
      "allOrNone": [
        ["Dirección", "Ciudad", "Código postal"]
      ],
      "conditionalEnum": [
        {
          "if": { "column": "Tipo de contrato", "equals": "Temporal" },
          "then": { "column": "Duración", "allowedValues": ["3 meses", "6 meses", "12 meses"] }
        }
      ],
      "dateOrder": [
        {
          "start": "Fecha inicio",
          "end": "Fecha fin"
        }
      ]
    }
  },
  {
    "tabname": "OptionalSheet",
    "required": false,
    "minRows": 1,
    "columns": [
      { "name": "CustomField", "required": true, "type": "string" },
      { "name": "Nombre del departamento", "key":"department", "required": true, "type": "string" }
    ],
    "rules": {
      "customRule": { "exampleParam": true }
    }
  }
]