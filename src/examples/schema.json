[
  {
    "tabname": "MainData",
    "required": true,
    "minRows": 3,
    "columns": [
      { "name": "ID", "key":"id", "required": true, "type": "string" },
      { "name": "Email", "key":"email", "required": true, "type": "email" },
      { "name": "Category", "key":"cat", "required": true, "type": "enum", "allowedValues": ["A", "B", "C"] },
      { "name": "Amount", "key":"amount", "required": false, "type": "number" },
      { "name": "IsActive", "key":"active", "required": false, "type": "boolean" },
      { "name": "ConditionalField", "key":"condition", "required": false, "type": "string" },
      { "name": "Exclusive1", "key":"exclusiveone", "required": false, "type": "string" },
      { "name": "Exclusive2", "key":"exclusivetwo", "required": false, "type": "string" }
    ],
    "rules": {
      "unique": { "columns": ["ID", "Email"] },
      "mutuallyExclusive": { "columns": ["Exclusive1", "Exclusive2"] },
      "conditionalRequired": {
        "when": { "column": "Category", "equals": "C" },
        "thenRequired": ["ConditionalField"]
      }
    }
  },
  {
    "tabname": "OptionalSheet",
    "required": false,
    "minRows": 1,
    "columns": [
      { "name": "CustomField", "required": true, "type": "string" }
    ],
    "rules": {
      "customRule": { "exampleParam": true }
    }
  }
]